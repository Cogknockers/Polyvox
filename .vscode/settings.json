{
  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/dist": true,
    "**/build": true,
    "**/out": true,
    "**/coverage": true,
    "**/.git": true,

    "**/*.map": true,
    "**/*.min.*": true,

    // BIG GEO (this is the killer for Polyvox)
    "**/public/geo/**": true,
    "**/*.geojson": true,
    "**/*.topojson": true
  },

  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/out/**": true,
    "**/coverage/**": true,
    "**/.git/**": true,
    "**/public/geo/**": true
  }
}
